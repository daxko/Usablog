@model Web.Models.Study

@{
	ViewBag.Title = "Create Study";
}

<h2>Create a new Study</h2>

<form method="POST" action="@Url.Action("Create")">
	<div class="form-field">
		<label for="name">Study Name</label>
		<input id="name" name="name" type="text" value="@Model.Name" maxlength="255" required="true" />
	</div>
	<div class="form-controls">
		<input name="submit" type="submit" value="Create" />
	</div>
</form>
