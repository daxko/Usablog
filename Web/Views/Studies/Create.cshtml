@model Web.Models.Study

@{
	ViewBag.Title = "Create a New Study";
	ViewBag.Breadcrumbs = new Dictionary<string, string>
	                      {
	                      	{ "Home", Url.Content("~/") },
							{ "Studies", Url.Action("Index") },
							{ "New", null }
	                      };
}

<h2>Create a New Study</h2>

<form method="POST" action="@Url.Action("Create")">
	<label for="name">Name</label>
	<input id="name" name="name" type="text" value="@Model.Name" maxlength="255" required="true" />

	<button type="submit" class="btn btn-primary">Save</button>
	<button type="button" class="btn btn-link" href="@Url.Action("Index")">Cancel</button>
</form>

