@model IEnumerable<Web.Models.Study>

@{
	ViewBag.Title = "Studies";
	ViewBag.Breadcrumbs = new Dictionary<string, string>
	                      {
	                      	{ "Home", Url.Content("~/") },
							{ "Studies", null },
	                      };
}

<h2>
	Your Studies 
	<button button="button" class="btn btn-link" href="@Url.Action("Create")">
		<i class="icon-plus"></i>
		Create a new study
	</button>
</h2>

<ul>
@foreach (var study in Model)
{
	<li><a href="@Url.Action("Details", new { Id = study.Id })">@study.Name</a></li>
}
</ul>
